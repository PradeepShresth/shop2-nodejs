	<!-- ================ category section start ================= -->		  
  <section class="section-margin--small mb-5">
    <div class="container">
      <div class="row">

        <div class="col-xl-12">
          <!-- Start Best Seller -->
          <section class="lattest-product-area pb-40 category-list">
            <% if (prods.length > 0) { %>
                <div class="row">
                    <% for (let product of prods) { %>
                        <article class="col-md-6 col-lg-3">
                            <div class="card text-center card-product">
                            <div class="card-product__img">
                                <img class="card-img" src="/<%= product.image %>" alt="">
                                <ul class="card-product__imgOverlay">
                                    <li><a href="/admin/products/<%= product._id %>"><i class="ti-search"></i></a></li>
                                    <li><a href="/admin/edit-product/<%= product._id %>"><i class="ti-settings"></i></a></li>
                                    <li>
                                      <input type="hidden" value="<%= product._id %>" name="productId">
                                      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                      <button type="button" onclick="deleteProduct(this)"><i class="ti-trash"></i></button>
                                    </li>
                                </ul>
                            </div>
                            <div class="card-body">
                                <p><%= product.category %></p>
                                <h4 class="card-product__title"><a href="/admin/products/<%= product._id %>"><%= product.title %></a></h4>
                                <p class="card-product__price">$ <%= product.price %></p>
                            </div>
                            </div>
                        </article>
                    <% } %>
                </div>
                
                <%- include('../includes/pagination.ejs', {currentPage: currentPage, nextPage: nextPage, previousPage: previousPage, lastPage: lastPage, hasNextPage: hasNextPage, hasPreviousPage: hasPreviousPage}) %>
        
            <% } else { %>
                <h1>No products found</h1>
            <% } %>
          </section>
          <!-- End Best Seller -->
        </div>
      </div>
    </div>
  </section>
	<!-- ================ category section end ================= -->		  

